@model List<ControleDeEstoque.Web.Models.GrupoProdutoModel>
@{
    ViewBag.title = "cadastro de grupos de produtos";
 }
<div id="cadastro">
    <section id="cadastro_cabecalho">
     <h1>@ViewBag.title</h1>
    </section>
    <section id="cadastro_conteudo">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div id="cabecalho_grid" class="row">
                        <a id="btn_incluir" class="btn_sucesso" role="button"><i class="glyphicon glyphicon-plus"></i>excluir</a>

                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <table id="grid_cadastro" class=" table table-bordered table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>nome</th>
                                        <th>activo</th>
                                        <th>ação</th>
                                    </tr>
                                    
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Nome</td>
                                            <td>@{var activo = (item.activo ? "sim" : "Não"); }@activo</td>
                                              <td>
  
                                                  <a class="btn btn-primary btn-alterar" role="button"><i class="glyphicon glyphicon-pencil"></i>alterar</a>
                                                <a class="btn btn-danger btn-excluir" role="button"><i class="glyphicon glyphicon-trash"></i>excluir</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>

            </div>

        </div>
    </section>

</div>

